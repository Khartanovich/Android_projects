<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="146dp"
    android:layout_height="146dp"
    android:layout_margin="8dp"
    android:background="@drawable/shape_rectangle_with_corner_radius"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_baseline_close_24" />

    <ImageView
        android:id="@+id/imagePerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:src="@drawable/ic_baseline_person_outline_24" />

    <TextView
        android:id="@+id/textNameCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_marginTop="8dp"
        android:text="Хочу посмотреть"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/sumPersonCollection"
        android:layout_width="35dp"
        android:layout_height="22dp"
        android:layout_gravity="center|center_vertical"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_rectangle_for_sum_collection"
        android:gravity="center"
        android:text="@string/_0"
        android:textColor="@color/white"
        android:textSize="11sp" />

</LinearLayout>